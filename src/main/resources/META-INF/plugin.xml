<idea-plugin>
    <id>com.kim.zilean</id>
    <name>Zilean</name>
    <vendor email="fengyuchenglun@foxmail.com" url="https://github.com/fengyuchenglun">KIM</vendor>

    <description><![CDATA[
    <p>MyBatis代码生成工具。</p>
    <p>当前支持数据库：</p>
    <ul>
        <li>MySQL</li>
    </ul>
    <p>当前支持及扩展：</p>
    <ul>
        <li>MyBatis</li>
        <li>MyBatis-Plus</li>
    </ul>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- 插件所依赖的其他插件的id -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <idea-version since-build="173.2696.26"/>

    <actions>
        <!-- Add your actions here -->
        <action id="zilean.ZileanGenerationAction" class="com.kim.zilean.action.ZileanGenerationAction"
                text="Generate Code"
                description="Generate myBatis plus common code">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="first"/>
        </action>
        <group id="zileanMenu" text="Zilean" popup="true">
            <action id="batiso.ExportTemplates" class="com.kim.zilean.action.ZileanExportTemplatesAction"
                    text="导出默认模版到 .zilean"
                    description="将默认的模版导出到项目根目录 (.zilean/templates) 中">
            </action>
            <action id="batiso.ExportTemplatesToIdea"
                    class="com.kim.zilean.action.ZileanExportTemplatesToProjectConfigAction"
                    text="导出默认模版到 .idea/zilean"
                    description="将默认的模版导出到项目配置目录 (.idea/zilean/templates) 中">
            </action>
            <separator/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>